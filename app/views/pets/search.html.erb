<div class="cambios">

<h1>Mascotas</h1>
<%= link_to 'Registra a tu mascota', new_pet_path, class: "btn btn-primary" %>

<div class="row">
  <div class="container">

  </div>
  <% @pets.each_slice(4) do |row| %>
  <% row.each do |pet| %>
  <div class= "col-md-3">
    <div class ="card">
      <%= image_tag pet.photo.sample.url, class:'card-img-top', size: '200x200' %>
      <div class="body">
      <h4><%="Nombre:"%><%= pet.name %></h4>
        <h5><%="Tipo de Mascota: "%><%= pet.specie %></h5>
        <%="Permiso Municipal:  "%><%if pet.municipal_record == 'f' %>
        <td>Sí</td>
        <%else%>
        <td>No</td>
        <% end %></br>
        <%="Sexo:  "%>  <%if pet.sex == 'f' %>
        <td>masculino</td>
        <%else%>
        <td>femenino</td>
        <% end %></br>
        <%="Posee vacunas al día:  "%><%if pet.vaccines == 'f' %>
        <td>Sí</td>
        <%else%>
        <td>No</td>
        <% end %></br>
        <%="Edad: "%><%= pet.age %></br>
        <%="Tamaño : "%><%= pet.size %></br>
        <!-- <%="Descripción: "%><%= pet.description %> -->

        <%= form_for(@interaction) do |form|  %>
        <%= form.submit %>
        <div class="field">
          <% form.label :user_two_id %>
          <%= form.text_field :user_two_id, value: pet.user.id  %>
          <% link_to 'Show', pet %>
          <% if can?(:destroy, pet) %>
          <%= link_to 'Edit', edit_pet_path(pet) %>
          <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%end%>
        </div>
        <% end %>

      </div>
    </div>
  </div>
  <% end %>
  <div class = "w-100" style="margin-top:20px"> </div>
  <% end %>
</div>
</div>
</div>

