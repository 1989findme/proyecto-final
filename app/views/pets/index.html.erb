<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Specie</th>
      <th>Breed</th>
      <th>Municipal record</th>
      <th>Vaccines</th>
      <th>Sex</th>
      <th>Size</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>


        <td><%= pet.name %></td>
        <td><%= pet.specie %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.municipal_record %></td>
        <td><%= pet.vaccines %></td>
        <td><%= pet.sex %></td>
        <td><%= pet.size %></td>
        <td><%= pet.age %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td>
          <% if can?(:destroy, pet) %>
          <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
